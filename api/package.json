{
  "jest": {
    "roots": [
      "tests"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ]
  },
  "scripts": {
    "buildAndRun": "tsc -p . && node ./dist/index.js",
    "watchAndRun": "tsc -p . --watch & npx nodemon ./dist/src/index.js",
    "typeorm": "npx tsc -p . && npx typeorm",
    "test": "jest --collectCoverage"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "big.js": "^6.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "joi": "^17.4.1",
    "lodash": "^4.17.21",
    "mysql2": "^2.2.5",
    "randexp": "^0.5.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.36",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/big.js": "^6.1.1",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.4.10",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "dependency-cruiser": "^10.0.6",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  }
