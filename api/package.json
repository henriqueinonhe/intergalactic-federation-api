{
  "jest": {
    "roots": [
      "YOUR_TESTS_LOCATION"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "YOUR_TESTS_LOCATION"
    ]
  },
  "scripts": {
    "buildAndRun": "tsc -p . && node ./dist/index.js",
    "watchAndRun": "tsc -p . --watch & npx nodemon ./dist/index.js",
    "typeorm": "npx tsc -p . && npx typeorm",
    "test": "jest --collectCoverage"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.36"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.4.10",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "dependency-cruiser": "^10.0.6",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  }
}
